<Rule Name="ArmGCCLinker" PageTemplate="tool" DisplayName="Linker" SwitchPrefix="-" Order="20" xmlns="http://schemas.microsoft.com/build/2009/properties" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sys="clr-namespace:System;assembly=mscorlib">
  <Rule.Categories>
    <Category Name="gcc-linker" DisplayName="GCC arm Linker" />
    <Category Name="antbuild" DisplayName="Android Ant Build" />
  </Rule.Categories>
  <Rule.DataSource>
    <DataSource Persistence="ProjectFile" ItemType="Link" Label="" HasConfigurationCondition="true" />
  </Rule.DataSource>

  <!-- GCC Linker -->
  <BoolProperty Name="EchoCommandLines" DisplayName="Echo Command Lines" Description="Show full command lines executed during linking" Category="gcc-linker">
  </BoolProperty>

  <!-- Android Ant Build -->
  <EnumProperty Name="AntBuild" DisplayName="Ant Build" Description="Settings for post-link ant build" Category="antbuild" IncludeInCommandLine="false">
    <EnumValue Name="Disabled" Switch="" DisplayName="Disabled" Description="Don't run the ant build">
    </EnumValue>
    <EnumValue Name="Debug" Switch="" DisplayName="ant debug" Description="Build with ant, debug build">
    </EnumValue>
    <EnumValue Name="Release" Switch="" DisplayName="ant release" Description="Build with ant, release build">
    </EnumValue>
  </EnumProperty>

  <StringProperty Subtype="file" Name="AntBatchFile" DisplayName="Path To Ant Batch File" Description="Path to the ant.bat file" Category="antbuild">
  </StringProperty>

  <StringProperty Subtype="folder" Name="AntBuildDirectory" DisplayName="Ant build.xml Directory" Description="Directory to invoke ant build from. Should contain a build.xml file." Category="antbuild" IncludeInCommandLine="false">
  </StringProperty>

  <StringProperty Name="AntLibraryName" DisplayName="Output Library Name" Description="Library name as called from java: System.loadLibrary();" Category="antbuild" IncludeInCommandLine="false">
  </StringProperty>
  
</Rule>
